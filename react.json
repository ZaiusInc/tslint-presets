{
  "extends": "./node.json",
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "jsx-no-multiline-js": [
      false
    ],
    "jsx-no-lambda": [
      true
    ],
    "jsx-no-bind": [
      true
    ],
    "jsx-no-string-ref": [
      true
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ]
  }
}
